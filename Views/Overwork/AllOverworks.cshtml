@model IEnumerable<_66bitProject.Models.Overwork>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <table class="table">
        <tr><td>ФИО сотрудника</td><td>Status</td></tr>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Person.FullName</td>
                @if (e.Status == null)
                {
                    <td><a asp-controller="Overwork" asp-action="ChangeStatus" asp-route-id="@e.Id">Ожидает решения</a></td>
                }
                else if ((bool)e.Status)
                {
                    <td>"Одобрено: " + @e.CalculatedPayment</td>
                }
                else
                {
                    <td>"Отклонено"</td>
                }
            </tr>
        }
    </table>
</div>

<div>
    <form asp-controller="Manager" asp-action="Index" method="get"><button type="submit">Закрыть</button></form>
</div>