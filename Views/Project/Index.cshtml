@model IEnumerable<_66bitProject.Models.Project>
@{
    ViewBag.Title = "Список проектов";
}

<a asp-action="Create">Добавить проект</a>

<table class="table">
    <tr><th>Название проекта</th><th></th></tr>
    @foreach (var project in Model)
    {
        <tr>
            <td>@project.Name</td>
            <td>
                <form asp-action="Delete" asp-route-projectId="@project.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-projectId="@project.Id">Изменить</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>

<div>
    <form asp-action="Index" asp-controller="User" method="get"><button type="submit">Закрыть</button></form>
</div>